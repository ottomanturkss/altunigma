<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h1 class="h3 mb-0"><i class="bi bi-wallet2"></i> Altunigma v1.0.1 [Beta]</h1>
                    </div>
                    <div class="card-body">
                        <ul class="nav nav-tabs mb-4" id="scannerTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="regular-tab" data-bs-toggle="tab" data-bs-target="#regular" type="button" role="tab" aria-controls="regular" aria-selected="true">Regular Scan</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="auto-tab" data-bs-toggle="tab" data-bs-target="#auto" type="button" role="tab" aria-controls="auto" aria-selected="false">Auto Scanner</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="target-tab" data-bs-toggle="tab" data-bs-target="#target" type="button" role="tab" aria-controls="target" aria-selected="false">Offline Target Scan</button>
                            </li>
                        </ul>
                        
                        <div class="tab-content" id="scannerTabsContent">
                            <!-- Regular Scan Tab -->
                            <div class="tab-pane fade show active" id="regular" role="tabpanel" aria-labelledby="regular-tab">
                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <div class="card h-100">
                                            <div class="card-header">
                                                <h5 class="mb-0">Generate Mnemonic</h5>
                                            </div>
                                            <div class="card-body">
                                                <form id="generateForm">
                                                    <div class="mb-3">
                                                        <label class="form-label">Word Count</label>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" name="wordCount" id="wordCount12" value="12" checked>
                                                            <label class="form-check-label" for="wordCount12">12 Words</label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" name="wordCount" id="wordCount24" value="24">
                                                            <label class="form-check-label" for="wordCount24">24 Words</label>
                                                        </div>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary">Generate</button>
                                                </form>
                                                <div class="mt-3" id="generatedMnemonic" style="display: none;">
                                                    <div class="alert alert-info">
                                                        <p class="mb-1"><strong>Generated Mnemonic:</strong></p>
                                                        <p id="mnemonicText" class="mb-0 user-select-all"></p>
                                                    </div>
                                                    <button id="useMnemonic" class="btn btn-sm btn-success">Use This Mnemonic</button>
                                                    <button id="copyMnemonic" class="btn btn-sm btn-secondary">Copy</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card h-100">
                                            <div class="card-header">
                                                <h5 class="mb-0">Scan Wallet</h5>
                                            </div>
                                            <div class="card-body">
                                                <form id="scanForm">
                                                    <div class="mb-3">
                                                        <label for="mnemonic" class="form-label">Mnemonic Phrase</label>
                                                        <textarea class="form-control" id="mnemonic" rows="3" placeholder="Enter your 12 or 24 word mnemonic phrase" required></textarea>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="rpcUrl" class="form-label required-field">RPC URL</label>
                                                        <input type="text" class="form-control" id="rpcUrl" placeholder="e.g., https://mainnet.infura.io/v3/YOUR_API_KEY" required>
                                                        <small class="form-text text-muted">Enter a valid RPC URL to connect to the Ethereum network</small>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="numAddresses" class="form-label">Number of Addresses</label>
                                                        <input type="number" class="form-control" id="numAddresses" min="1" max="50" value="5">
                                                    </div>
                                                    <div class="mb-3 form-check">
                                                        <input type="checkbox" class="form-check-input" id="scanTokens" checked>
                                                        <label class="form-check-label" for="scanTokens">Scan for ERC-20 Token Balances</label>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary">Scan Wallet</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Auto Scanner Tab -->
                            <div class="tab-pane fade" id="auto" role="tabpanel" aria-labelledby="auto-tab">
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <h5 class="mb-0">Auto Scanner - Fill in Missing Words</h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="text-muted mb-3">
                                            Enter your partial mnemonic phrase with placeholders for missing words. Use "_" (underscore) 
                                            for each word you want to be randomly generated. The system will try different combinations.
                                        </p>
                                        
                                        <form id="autoScanForm">
                                            <div class="row">
                                                <div class="col-md-12 mb-3">
                                                    <label class="form-label">Mnemonic Template (12 or 24 words)</label>
                                                    <div class="d-flex align-items-center mb-2">
                                                        <select id="wordCountAuto" class="form-select me-2" style="width: auto;">
                                                            <option value="12">12 Words</option>
                                                            <option value="24">24 Words</option>
                                                        </select>
                                                        <button type="button" id="createTemplateBtn" class="btn btn-outline-secondary">Create Template</button>
                                                    </div>
                                                </div>
                                                
                                                <div class="col-12 mb-3">
                                                    <div id="mnemonicTemplate" class="d-none">
                                                        <!-- Word inputs will be generated here -->
                                                    </div>
                                                </div>
                                                
                                                <div class="col-md-6 mb-3">
                                                    <label for="rpcUrlAuto" class="form-label required-field">RPC URL</label>
                                                    <input type="text" class="form-control" id="rpcUrlAuto" placeholder="e.g., https://mainnet.infura.io/v3/YOUR_API_KEY" required>
                                                    <small class="form-text text-muted">Enter a valid RPC URL to connect to the Ethereum network</small>
                                                </div>
                                                
                                                <div class="col-md-3 mb-3">
                                                    <label for="numAddressesAuto" class="form-label">Addresses to Check</label>
                                                    <input type="number" class="form-control" id="numAddressesAuto" min="1" max="10" value="1">
                                                </div>
                                                
                                                <div class="col-md-3 mb-3">
                                                    <label for="maxCombinations" class="form-label">Max Combinations</label>
                                                    <input type="text" class="form-control" id="maxCombinations" placeholder="Infinite" value="">
                                                    <small class="form-text text-muted">Leave empty for infinite scanning, or enter a number to limit</small>
                                                </div>
                                                
                                                <div class="col-12 mb-3">
                                                    <div class="form-check">
                                                        <input type="checkbox" class="form-check-input" id="scanTokensAuto" checked>
                                                        <label class="form-check-label" for="scanTokensAuto">Scan for ERC-20 Token Balances</label>
                                                    </div>
                                                </div>
                                                
                                                <div class="col-12">
                                                    <button type="submit" class="btn btn-primary">Start Auto Scanning</button>
                                                    <button type="button" id="stopScanBtn" class="btn btn-danger d-none">Stop Scanning</button>
                                                </div>
                                            </div>
                                        </form>
                                        
                                        <div class="mt-4">
                                            <div class="progress mb-3 d-none" id="scanProgressContainer">
                                                <div id="scanProgress" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
                                            </div>
                                            
                                            <div id="autoScanStatus" class="alert alert-info d-none">
                                                <div class="scan-status-header">
                                                    <p><strong>Status:</strong> <span id="statusText">Preparing to scan...</span></p>
                                                    <p class="mb-0"><strong>Current combination:</strong> <span id="currentCombination"></span></p>
                                                    <p class="mb-0"><strong>Combinations checked:</strong> <span id="combinationsChecked">0</span> / <span id="totalCombinations">0</span></p>
                                                </div>
                                                <!-- Detailed wallet information will be added here dynamically -->
                                            </div>
                                            
                                            <div id="foundWalletsContainer" class="d-none">
                                                <h5 class="mt-4 mb-3">Found Wallet with Balance</h5>
                                                <div class="alert alert-warning mb-3">
                                                    <i class="bi bi-shield-exclamation me-2"></i>
                                                    <strong>Security Warning:</strong> Private keys provide full access to your cryptocurrency. Never share them with anyone.
                                                </div>
                                                <div class="table-responsive">
                                                    <table class="table table-striped table-hover" id="foundWalletsTable">
                                                        <thead>
                                                            <tr>
                                                                <th>Mnemonic</th>
                                                                <th>Address</th>
                                                                <th>Balance (ETH)</th>
                                                                <th>Tx Count</th>
                                                                <th>Private Key</th>
                                                                <th>Derivation Path</th>
                                                                <th>Actions</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="foundWallets">
                                                            <!-- Found wallets will be inserted here -->
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <div class="alert alert-success mt-3">
                                                    <p class="mb-1"><i class="bi bi-check-circle-fill me-2"></i><strong>Success!</strong> Found a wallet with balance.</p>
                                                    <p class="mb-0">You can use the buttons above to use this mnemonic for a full scan or copy it to clipboard.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Offline Target Scan Tab -->
                            <div class="tab-pane fade" id="target" role="tabpanel" aria-labelledby="target-tab">
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <h5 class="mb-0">Offline Target Scan - Find Mnemonic for Specific Address</h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="text-muted mb-3">
                                            Enter a specific Ethereum wallet address you want to find. The system will generate and check mnemonics
                                            until it finds one that generates the target address. This process runs entirely in your browser.
                                        </p>
                                        
                                        <form id="targetScanForm">
                                            <div class="row">
                                                <div class="col-md-12 mb-3">
                                                    <label for="targetAddress" class="form-label required-field">Target Ethereum Address</label>
                                                    <input type="text" class="form-control" id="targetAddress" 
                                                        placeholder="0x..." required>
                                                    <small class="form-text text-muted">Enter the Ethereum address you want to find the mnemonic for</small>
                                                </div>
                                                
                                                <div class="col-md-6 mb-3">
                                                    <label for="wordCountTarget" class="form-label">Mnemonic Word Count</label>
                                                    <select id="wordCountTarget" class="form-select">
                                                        <option value="12">12 Words</option>
                                                        <option value="24">24 Words</option>
                                                    </select>
                                                </div>
                                                
                                                <div class="col-md-6 mb-3">
                                                    <label for="derivationPathType" class="form-label">Derivation Path</label>
                                                    <select id="derivationPathType" class="form-select">
                                                        <optgroup label="Ethereum Wallets">
                                                            <option value="ethereum" selected>Ethereum (m/44'/60'/0'/0/x)</option>
                                                            <option value="metamask">MetaMask (m/44'/60'/0'/0/x)</option>
                                                            <option value="coinbase">Coinbase Wallet (m/44'/60'/0'/0/x)</option>
                                                            <option value="trust_wallet">Trust Wallet (m/44'/60'/0'/0/x)</option>
                                                            <option value="exodus">Exodus (m/44'/60'/0'/0/x)</option>
                                                            <option value="brave_wallet">Brave Wallet (m/44'/60'/0'/0/x)</option>
                                                            <option value="ethereum_ledger">Ethereum Ledger (m/44'/60'/0'/x)</option>
                                                            <option value="ethereum_ledger_live">Ethereum Ledger Live (m/44'/60'/x'/0/0)</option>
                                                            <option value="ethereum_trezor">Ethereum Trezor (m/44'/60'/0'/0/x)</option>
                                                            <option value="myetherwallet">MyEtherWallet (m/44'/60'/0'/x)</option>
                                                        </optgroup>
                                                        <optgroup label="Solana Wallets">
                                                            <option value="phantom">Phantom (m/44'/501'/0'/0/x)</option>
                                                            <option value="solflare">Solflare (m/44'/501'/0'/x)</option>
                                                            <option value="sollet">Sollet (m/44'/501'/x'/0/0)</option>
                                                        </optgroup>
                                                        <optgroup label="Other Cryptocurrencies">
                                                            <option value="binance">Binance Chain (m/44'/714'/0'/0/x)</option>
                                                            <option value="bitcoin">Bitcoin (m/44'/0'/0'/0/x)</option>
                                                            <option value="bitcoin_legacy">Bitcoin Legacy (m/44'/0'/0'/x)</option>
                                                            <option value="litecoin">Litecoin (m/44'/2'/0'/0/x)</option>
                                                            <option value="dogecoin">Dogecoin (m/44'/3'/0'/0/x)</option>
                                                            <option value="ripple">Ripple (m/44'/144'/0'/0/x)</option>
                                                            <option value="cardano">Cardano (m/1852'/1815'/0'/0/x)</option>
                                                            <option value="polkadot">Polkadot (m/44'/354'/0'/0/x)</option>
                                                        </optgroup>
                                                        <option value="custom">Custom Path</option>
                                                    </select>
                                                    <div id="customPathContainer" class="mt-2 d-none">
                                                        <input type="text" class="form-control" id="customPath" placeholder="m/44'/60'/0'/0/0">
                                                        <small class="form-text text-muted">Enter custom derivation path with 'x' as the variable index</small>
                                                    </div>
                                                    <div class="mt-2">
                                                        <label for="derivationPathIndex" class="form-label">Index (x)</label>
                                                        <input type="number" class="form-control" id="derivationPathIndex" min="0" max="100" value="0">
                                                        <small class="form-text text-muted">The index value to replace 'x' in the path</small>
                                                    </div>
                                                </div>
                                                
                                                <div class="col-md-12 mb-3">
                                                    <label class="form-label">Mnemonic Template (Optional)</label>
                                                    <p class="text-muted small mb-2">
                                                        Enter known words in your mnemonic and use "_" (underscore) for unknown words. 
                                                        The system will try different combinations for the unknown words.
                                                    </p>
                                                    <div class="d-flex align-items-center mb-2">
                                                        <button type="button" id="createTargetTemplateBtn" class="btn btn-outline-secondary">Create Template</button>
                                                        <button type="button" id="clearTargetTemplateBtn" class="btn btn-outline-danger ms-2">Clear Template</button>
                                                    </div>
                                                    <div id="targetMnemonicTemplate" class="d-none">
                                                        <!-- Word inputs will be generated here -->
                                                    </div>
                                                </div>
                                                
                                                <div class="col-md-12 mb-3">
                                                    <div class="form-check">
                                                        <input type="checkbox" class="form-check-input" id="checkAllIndexes" checked>
                                                        <label class="form-check-label" for="checkAllIndexes">Check first 20 address indexes</label>
                                                        <small class="form-text text-muted d-block">If enabled, will check addresses at multiple derivation path indexes</small>
                                                    </div>
                                                </div>
                                                
                                                <div class="col-md-12 mb-3">
                                                    <label for="maxAttemptsTarget" class="form-label">Maximum Attempts</label>
                                                    <input type="number" class="form-control" id="maxAttemptsTarget" min="1000" value="1000000">
                                                    <small class="form-text text-muted">Limit the number of attempts (higher values may slow down your browser)</small>
                                                </div>
                                                
                                                <div class="col-12">
                                                    <button type="submit" class="btn btn-primary">Start Target Scanning</button>
                                                    <button type="button" id="stopTargetScanBtn" class="btn btn-danger d-none">Stop Scanning</button>
                                                    <button type="button" id="enableDebugBtn" class="btn btn-outline-secondary">Enable Debug Mode</button>
                                                </div>
                                            </div>
                                        </form>
                                        
                                        <div class="mt-4">
                                            <div class="progress mb-3 d-none" id="targetScanProgressContainer">
                                                <div id="targetScanProgress" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
                                            </div>
                                            
                                            <div id="targetScanStatus" class="alert alert-info d-none">
                                                <div class="scan-status-header">
                                                    <p><strong>Status:</strong> <span id="targetStatusText">Preparing to scan...</span></p>
                                                    <p class="mb-0"><strong>Current attempt:</strong> <span id="currentAttempt">0</span> / <span id="maxAttempts">0</span></p>
                                                    <p class="mb-0"><strong>Current mnemonic:</strong> <span id="currentTargetMnemonic" class="text-monospace"></span></p>
                                                </div>
                                                <div id="debugInfo" class="mt-3 d-none">
                                                    <hr>
                                                    <p><strong>Debug Information:</strong></p>
                                                    <pre id="debugOutput" class="bg-light p-2 rounded" style="max-height: 150px; overflow: auto;"></pre>
                                                    <button id="toggleDebugBtn" class="btn btn-sm btn-outline-secondary">Hide Debug Info</button>
                                                </div>
                                            </div>
                                            
                                            <div id="targetFoundContainer" class="d-none">
                                                <h5 class="mt-4 mb-3">Found Matching Wallet!</h5>
                                                <div class="alert alert-success mb-3">
                                                    <i class="bi bi-check-circle-fill me-2"></i>
                                                    <strong>Success!</strong> Found a mnemonic that generates the target address.
                                                </div>
                                                <div class="card border-success">
                                                    <div class="card-header bg-success text-white">
                                                        <h6 class="mb-0">Matching Wallet Details</h6>
                                                    </div>
                                                    <div class="card-body">
                                                        <div class="row">
                                                            <div class="col-md-12 mb-3">
                                                                <label class="form-label"><strong>Mnemonic Phrase:</strong></label>
                                                                <div class="alert alert-warning">
                                                                    <i class="bi bi-shield-exclamation me-2"></i>
                                                                    <strong>Security Warning:</strong> This mnemonic provides full access to the wallet. Never share it with anyone.
                                                                </div>
                                                                <div class="p-3 bg-light rounded border">
                                                                    <p id="foundMnemonic" class="mb-0 user-select-all text-monospace"></p>
                                                                </div>
                                                                <div class="mt-2">
                                                                    <button id="copyFoundMnemonic" class="btn btn-sm btn-secondary">
                                                                        <i class="bi bi-clipboard"></i> Copy Mnemonic
                                                                    </button>
                                                                    <button id="useFoundMnemonic" class="btn btn-sm btn-success">
                                                                        <i class="bi bi-arrow-right-circle"></i> Use for Full Scan
                                                                    </button>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6 mb-3">
                                                                <label class="form-label"><strong>Address:</strong></label>
                                                                <p id="foundAddress" class="text-monospace user-select-all"></p>
                                                            </div>
                                                            <div class="col-md-6 mb-3">
                                                                <label class="form-label"><strong>Derivation Path:</strong></label>
                                                                <p id="foundDerivationPath" class="text-monospace"></p>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <label class="form-label"><strong>Private Key:</strong></label>
                                                                <div class="alert alert-warning">
                                                                    <i class="bi bi-shield-exclamation me-2"></i>
                                                                    <strong>Security Warning:</strong> This private key provides full access to the wallet. Never share it with anyone.
                                                                </div>
                                                                <div class="p-3 bg-light rounded border">
                                                                    <p id="foundPrivateKey" class="mb-0 user-select-all text-monospace"></p>
                                                                </div>
                                                                <div class="mt-2">
                                                                    <button id="copyFoundPrivateKey" class="btn btn-sm btn-secondary">
                                                                        <i class="bi bi-clipboard"></i> Copy Private Key
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Regular Scan Results Table -->
                        <div id="resultsSection" style="display: none;">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">Wallet Information</h5>
                                </div>
                                <div class="card-body">
                                    <div class="alert alert-warning mb-3">
                                        <i class="bi bi-shield-exclamation me-2"></i>
                                        <strong>Security Warning:</strong> Private keys provide full access to your cryptocurrency. Never share them with anyone.
                                    </div>
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Index</th>
                                                    <th>Address</th>
                                                    <th>Balance (ETH)</th>
                                                    <th>Tx Count</th>
                                                    <th>Private Key</th>
                                                    <th>Derivation Path</th>
                                                    <th>Token Balances</th>
                                                </tr>
                                            </thead>
                                            <tbody id="walletResults">
                                                <!-- Results will be inserted here -->
                                            </tbody>
                                        </table>
